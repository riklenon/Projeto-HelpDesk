@model IEnumerable<ProjetoPim.Models.Chamado>


@{
    ViewData["Title"] = "Chamados";
}

<script src="~/js/jquery-2.2.4.min.js"></script>
<script src="~/js/jquery.tablesorter.js"></script>


<h2>Chamados</h2>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table id="myTable" class=" table tablesorter">
    <thead>
        <tr>
            <th>
                Nº
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Setor
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridade)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prioridade)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Cancelar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-default" asp-action="Index2">Sair</a>
</div>
<script type="text/javascript">
    $(".tablesorter").tablesorter();
</script>
