@model ProjetoPim.Models.Chamado

@{
    ViewData["Title"] = "Details";
}

<h2>Chamado</h2>

<div>
    <h4>Detalhado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nº
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt style="margin-top: 25px">
            @Html.DisplayNameFor(model => model.Assunto)
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.Assunto)
        </dd>
        <dt style="margin-top: 25px">
            Autor
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt style="margin-top: 25px">
            Telefone
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt style="margin-top: 25px">
            @Html.DisplayNameFor(model => model.IdVpn)
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.IdVpn)
        </dd>
        <dt style="margin-top: 25px">
            @Html.DisplayNameFor(model => model.SenhaVpn)
        </dt>
        <dd style="margin-top: 25px">
            @Html.DisplayFor(model => model.SenhaVpn)
        </dd>
        <dt style="margin-top: 50px">
            Descrição
        </dt>
    </dl>
</div>
<div>
    <textarea style="margin: 50px; color:blue; background-color:azure" disabled cols="40"> @Html.DisplayFor(model => model.Descricao)</textarea>

</div>
<div>
    <a class="btn btn-success" asp-action="Confirma" asp-route-id="@Model.Id">Confirmar Atendimento</a>
    <input class="btn btn-default" type="button" value="Imprimir" onClick="window.print()" />
    <a class="btn btn-default" asp-action="MeusChamados">Sair</a>
</div>
